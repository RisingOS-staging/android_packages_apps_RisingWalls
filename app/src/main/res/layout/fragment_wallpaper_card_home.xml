<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/corner_radius_secondary"
    app:cardBackgroundColor="@android:color/transparent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_primary"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_primary"
            app:cardBackgroundColor="@color/color_background_primary">

            <TextView
                android:id="@+id/homecard_text_title"
                android:textSize="@dimen/text_size_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/margin_secondary"
                android:layout_marginHorizontal="3dp"
                android:singleLine="true"/>

        </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>